@{
    ViewBag.Title = "Trang quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @StaticResources.Resources.AdministrationWebsite
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @StaticResources.Resources.Home</a></li>
        <li class="active">@StaticResources.Resources.Display</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/home/index">
                        <span class="info-box-icon bg-aqua"><i class="fa fa-home"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Home</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/user/">
                        <span class="info-box-icon bg-green"><i class="fa fa-user"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Account</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/categories">
                        <span class="info-box-icon bg-yellow"><i class="fa fa-list"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Category</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/article">
                        <span class="info-box-icon bg-red"><i class="fa fa-files-o"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Post</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
              
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/news">
                        <span class="info-box-icon bg-green"><i class="fa fa-newspaper-o"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.News</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->

            
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/Support">
                        <span class="info-box-icon bg-red"><i class="fa fa-users"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.SupportOnline</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/adv">
                        <span class="info-box-icon bg-aqua"><i class="fa fa-archive"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Advertisement</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/user">
                        <span class="info-box-icon bg-green"><i class="fa fa-user-md"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Customer</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a class="info-box" href="/admin/setting">
                        <span class="info-box-icon bg-yellow"><i class="fa fa-cog"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">@StaticResources.Resources.Setting</span>
                        </div><!-- /.info-box-content -->
                    </a><!-- /.info-box -->
                </div><!-- /.col -->
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-bar-chart text-green"></i>@StaticResources.Resources.Statistical</h3>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-striped">
                       
                        <tr>
                            <td></td>
                            <td><a href="/admin/order">@StaticResources.Resources.Order</a></td>
                           
                            <td><span class="badge bg-red">@ViewBag.OrderCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/order/view">@StaticResources.Resources.Order @StaticResources.Resources.Today <img src="~/Content/themes/images/tag-new.gif" /></a></td>
                           
                            <td><span class="badge bg-yellow">@ViewBag.TodayOrderCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/products">@StaticResources.Resources.Products</a></td>
                            
                            <td><span class="badge bg-light-blue">@ViewBag.ProductCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/reviews/listallreviews">@StaticResources.Resources.Evaluate @StaticResources.Resources.Products @StaticResources.Resources.New</a></td>
                            
                            <td><span class="badge bg-green">@ViewBag.ReviewCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/news">@StaticResources.Resources.News</a></td>

                            <td><span class="badge bg-red">@ViewBag.NewsCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/article">@StaticResources.Resources.Post</a></td>

                            <td><span class="badge bg-yellow">@ViewBag.ArtCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/adv">@StaticResources.Resources.Advertisement</a></td>

                            <td><span class="badge bg-light-blue">@ViewBag.AdvCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/category">@StaticResources.Resources.Category</a></td>

                            <td><span class="badge bg-green">@ViewBag.CategoriesCount</span></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><a href="/admin/support">@StaticResources.Resources.SupportOnline</a></td>

                            <td><span class="badge bg-yellow">@ViewBag.SupCount</span></td>
                        </tr>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>

    </div>
</section>