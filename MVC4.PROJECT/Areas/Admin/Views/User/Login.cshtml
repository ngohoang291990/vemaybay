@model MVC4.PROJECT.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập vào hệ quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutOut.cshtml";
}
<div class="login-logo">
    <a href="#"><b>Admin</b>HT</a>
</div><!-- /.login-logo -->
<div class="login-box-body">
   
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
         @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
         <p class="login-box-msg">Đăng nhập</p>
        <div class="form-group has-feedback">
            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Tài khoản", @class = "form-control" })
            @*<input type="email" class="form-control" placeholder="Email">*@
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @*<input type="password" class="form-control" placeholder="Password">*@
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Mật khẩu",@class = "form-control" })
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
       
        <div class="row">
         
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
            </div><!-- /.col -->
        </div>
    }


   
</div><!-- /.login-box-body -->