@model IEnumerable<Model.EF.CW_Booking>
@{
    ViewBag.Title = "Quản lý booking vé";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}


<section class="content-header">
    <h1>
        Quản lý Booking
    </h1>
    <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Booking</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">
                Có tất cả @if (Model != null)
                {
                    <span>@Model.Count()</span>
                }
                else
                {
                    <span>0</span>
                } banr ghi
            </h3>
            <div class="text-left">
                <br />
                @*<a href="/admin/booking/add" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</a>*@
                <a href="javascript:void(0)" class="btn btn-warning delete"><i class="fa fa-trash"></i> Xóa tất cả</a>
            </div>


        </div><!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:20px;">STT</th>
                        <th>Họ tên</th>
                        <th><center>Ngày booking</center></th>
                        @*<th>Thứ tự</th>*@
                        <th width="100px"></th>
                        <td><center><input type="checkbox" id="title-checkbox" name="title-checkbox" /></center></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="trow_@item.Id">
                            <td>@i.ToString()</td>

                            <td data-id="@item.Id">@item.FullName</td>
                          
                            <td><center>@item.DateCreated</center></td>
                            <td>
                                <center>
                                    <a href="/admin/booking/view/@item.Id" class='btn btn-primary' style="padding: 0px; height: 20px;"> Xem chi tiết</a>

                                    <a href="#" data="@item.Id" class='btn btn-mini btn-danger btndelte'><i class="fa fa-trash"></i></a>
                                </center>
                            </td>
                            <td><center><input type="checkbox" value="@item.Id" /></center></td>
                        </tr>
                        i = i + 1;
                    }


                </tbody>

            </table>


            <div class="modal modal-danger" id="myAlert">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Cảnh báo</h4>
                        </div>
                        <div class="modal-body">
                            <p>Bạn có thực sự muốn xóa bản ghi nay?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="javascript:void(0)" class="btn btn-outline pull-left closealert" data-dismiss="modal">Bỏ qua</a>
                            <a href="javascript:void(0)" class="btn btn-outline deleleoneitem">Đồng ý</a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section><!-- /.content -->
@section jsFooter{
    <script>
        $(function () {
            $("#example1").DataTable();
        });
    </script>
    @*<script src="/asset/admin/js/article.js"></script>*@
}
